<div class="col-md-12">
  <div class="job">

  </div>

    <ul id="myTab" class="nav nav-tabs" role="tablist">
      <li class="">
        <a data-toggle="tab" href="#category-0">学徒</a>
      </li>
      <li class="active">
        <a data-toggle="tab" href="#category-1">匠人</a>
      </li>
      <li class="">
        <a data-toggle="tab" href="#category-3">大师</a>
      </li>
    </ul>

  <div class="dropdown pull-right">
    <br>
    <br>
    <br>
     <button class="btn btn-warning" type="button" data-toggle="dropdown" pull-right>排序
       <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
      <li>
       <a href="/jobs?order=by_lower_bound">按照薪资下限排序</a>
      </li>
      <li>
       <a href="/jobs?order=by_upper_bound">按照薪资上限排序</a>
      </li>
      <li>
       <a href="/jobs">按照发表时间排序</a>
      </li>
    </ul>
  </div>
  <table class="table table-hover">
    <thead>
      <br>
      <br>
      <br>
      <tr>
        <hr>
        <td>职缺</td>
        <td>工作城市</td>
        <td>薪资范围</td>
        <td>发布时间</td>
      </tr>
    <tbody>
      <% @jobs.each do |job| %>
         <tr>
           <td><%= link_to(job.title, job_path(job)) %></td>
           <td><%= link_to(job.city, job_path(job)) %></td>
           <td width="30%">
             <span class="badge badge-info">
               <span class="fa fa-rmb"></span> <%= job.wage_lower_bound%> - <%= job.wage_upper_bound%> 元
             </span>
           </td>
           <td><%= local_time(job.created_at, '%B %e, %Y') %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
