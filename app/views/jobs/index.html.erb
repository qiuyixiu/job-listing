<div class="row">

    <ul class="nav nav-tabs">
      <div class="col-md-3 text-center">
        <%= link_to  jobs_path do %>
        <img src='<%= image_url 'zhiwei.png' %>'>
        <br>
        <%= link_to "所有职位", jobs_path %>
        <% end %>
      </div>
      <div class="col-md-3 text-center">
        <%= link_to  jobs_path(:category => "学徒" ) do %>
        <img src='<%= image_url 'xuetu2.png' %>'>
        <br>
        <%= link_to "学徒", jobs_path(:category => "学徒" ) %>
        <% end %>
      </div>
      <div class="col-md-3 text-center">
        <%= link_to  jobs_path(:category => "匠人" ) do %>
